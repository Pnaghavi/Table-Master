<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StaffActivity">


    <LinearLayout
            android:layout_width="358dp"
            android:layout_height="54dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal" android:id="@+id/linearLayout5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bluetoothText" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent">


        <Button
                android:text="table 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button_table1" android:layout_weight="1"
                android:onClick="Table1" android:textStyle="bold"
                android:textColor="@color/staff_background_color"
                android:background="@drawable/fui_idp_button_background_google"/>
        <Button
                android:text="table 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button_table2" android:layout_weight="1"
                android:onClick="Table2" android:textColor="@color/staff_background_color"
                android:background="@drawable/fui_idp_button_background_google" android:textStyle="bold"/>
        <Button
                android:id="@+id/button_table3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="table 3"
                android:onClick="Table3" android:textColor="@color/staff_background_color"
                android:background="@drawable/fui_idp_button_background_google" android:textStyle="bold"/>


    </LinearLayout>
    <LinearLayout
            android:layout_width="213dp"
            android:layout_height="44dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <Button
                android:id="@+id/redButt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DONE"
                android:onClick="startCount" android:textStyle="bold"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/background_light"/>
        <Button
                android:text="Exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/exitButton" android:layout_weight="1"
                android:onClick="exitTable"/>

    </LinearLayout>
    <TextView
            android:id="@+id/bluetoothText"
            android:layout_width="224dp"
            android:layout_height="101dp"

            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="14sp"
            android:textAlignment="center" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_staff_logged_in_as"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="193dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/linearLayout4" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <TextView
                android:text="temperature:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/temperature" android:layout_weight="1"
                android:textSize="18sp"/>
    </LinearLayout>
    <TextView
            android:id="@+id/tv_staff_loggedin_text"
            android:text="Logged in as:"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textview_staff_title"
            app:layout_constraintHorizontal_bias="0.487"/>
    <TextView
            android:id="@+id/tv_staff_logged_in_as"
            android:layout_width="165dp"
            android:layout_height="21dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_staff_loggedin_text"/>
    <TextView
            android:id="@+id/textview_staff_title"
            android:text="Staff Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.47" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:id="@+id/btn_staff_back_to_login"
            android:text="Back to login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_conversion_wrapWidth="231"
            tools:layout_conversion_wrapHeight="126"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.278"/>

</android.support.constraint.ConstraintLayout>