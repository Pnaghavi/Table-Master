<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:srcCompat="@drawable/terry_crews"
            android:paddingBottom="12dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="14dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"/>
    <TextView
            android:id="@+id/tv_full_name"
            android:text="Full Name"
            android:layout_width="179dp"
            android:layout_height="24dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/tv_email_addr"
            android:text="Email address"
            android:layout_width="180dp"
            android:layout_height="19dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/tv_full_name"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/tv_is_manager"
            android:text="manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp" android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/btn_edit_user"
            android:text="Edit"
            android:layout_width="74dp"
            android:layout_height="41dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp"
            android:textSize="14sp"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Avg T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ave_time"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_email_addr"
            app:layout_constraintStart_toEndOf="@+id/tv_avg_time_text" android:layout_marginStart="4dp"/>
    <TextView
            android:text="Table"
            android:layout_width="50dp"
            android:layout_height="19dp"
            android:id="@+id/tv_assigned_table" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_email_addr"/>
    <TextView
            android:text="Average time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_avg_time_text" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_email_addr"
            app:layout_constraintStart_toEndOf="@+id/tv_assigned_table" android:layout_marginStart="15dp"/>

</android.support.constraint.ConstraintLayout>